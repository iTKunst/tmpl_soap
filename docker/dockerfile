FROM maven:3.6.3-jdk-8

USER root

ARG CERT_DIR
ARG CONT_DIR
ARG HOST_DIR
ARG SYS_DIR
ARG TMPL_DIR

ARG ART
ARG FILE
ARG GRP
ARG REPO_HOST
ARG REPO_PORT_EXT
ARG VER

RUN echo CERT_DIR is ${CERT_DIR}
RUN echo CONT_DIR is ${CONT_DIR}
RUN echo HOST_DIR is ${HOST_DIR}
RUN echo SYS_DIR is ${SYS_DIR}
RUN echo TMPL_DIR is ${TMPL_DIR}

RUN echo ART is ${ART}
RUN echo FILE is ${FILE}
RUN echo GRP is ${GRP}
RUN echo REPO_HOST is ${REPO_HOST}
RUN echo REPO_PORT_EXT is ${REPO_PORT_EXT}
RUN echo VER is ${VER}


RUN mkdir -p ${CERT_DIR}
RUN mkdir -p ${CONT_DIR}

WORKDIR ${CONT_DIR}

COPY ./${TMPL_DIR}/mvn/pom.xml .
COPY ./${SYS_DIR}/soap/*.wsdl .

RUN mkdir -p /root/.m2
COPY ./${SYS_DIR}/maven/settings.xml /root/.m2/settings.xml

RUN echo CERT_DIR is ${CERT_DIR}
#RUN mkdir -p ${CERT_DIR}

COPY ./${SYS_DIR}/nexus/nexus.crt ${CERT_DIR}
#RUN update-ca-trust
RUN update-ca-certificates -v

# build all dependencies for offline use
RUN mvn dependency:go-offline -B

ENV ART $ART
ENV FILE $FILE
ENV GRP $GRP
ENV REPO_HOST $REPO_HOST
ENV REPO_PORT_EXT $REPO_PORT_EXT
ENV VER $VER

RUN echo ART is ${ART}
RUN echo FILE is ${FILE}
RUN echo GRP is ${GRP}
RUN echo REPO_HOST is ${REPO_HOST}
RUN echo REPO_PORT_EXT is ${REPO_PORT_EXT}
RUN echo VER is ${VER}

ENTRYPOINT ["mvn", "deploy"]

#ENTRYPOINT ["/bin/sh"]
